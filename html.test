.header-list {
  font-weight: 500;
  font-size: 16px;
  line-height: 1.5;
  color: var(--dark);
  transition: color var(--transition-dur-and-func);
}
.header-list:hover,
.header-list:focus {
 color: var(--pressed-state);
}
.active {
  color: var(--pressed-state);
}
.active::after {
  content: “”;
  display: block;
  position: absolute;
  width: 100%;
  height: 4px;
  left: 0px;
  top: 44px;
  background-color: var(--pressed-state);
  border-radius: 2px;
}